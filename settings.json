{
    "theme": "blue",
    "logFile": "player.log",
    "logLevel": "DEBUG",
    "debug": true,
    "proxyServerPort": 5000,

    "visualization": "Column equalizer",

    "keybindings": [
        {
            "keys": ["space"],
            "command": "togglePause"
        },
        {
            "keys": ["arrowleft"],
            "command": "seekBy",
            "args": [-20]
        },
        {
            "keys": ["arrowright"],
            "command": "seekBy",
            "args": [20]
        },
        {
            "keys": ["ctrl+arrowleft"],
            "command": "seekBy",
            "args": [-120]
        },
        {
            "keys": ["ctrl+arrowright"],
            "command": "seekBy",
            "args": [120]
        },
        {
            "keys": ["p"],
            "command": "skipTrackBy",
            "args": [-1]
        },
        {
            "keys": ["n"],
            "command": "skipTrackBy",
            "args": [1]
        },
        {
            "keys": [";", "ctrl+shift+p"],
            "command": "openCommandsPalette"
        },
        {
            "keys": ["+"],
            "command": "volumeBy",
            "args": [0.05]
        },
        {
            "keys": ["-"],
            "command": "volumeBy",
            "args": [-0.05]
        },
        {
            "keys": ["ctrl+p"],
            "command": "playlist.open"
        },
        {
            "keys": ["ctrl+n"],
            "command": "playlist.create"
        },
        {
            "keys": ["shift+delete"],
            "command": "playlist.delete"
        },
        {
            "keys": ["r"],
            "command": "playlist.randomTrack"
        },
        {
            "keys": ["escape"],
            "command": "blur"
        },
        {
            "keys": ["arrowdown"],
            "command": "listDown"
        },
        {
            "keys": ["arrowup"],
            "command": "listUp"
        },
        {
            "keys": ["pagedown"],
            "command": "listPageDown"
        },
        {
            "keys": ["pageup"],
            "command": "listPageUp"
        },
        {
            "keys": ["shift+arrowdown"],
            "command": "listAddToSelectionDown"
        },
        {
            "keys": ["shift+arrowup"],
            "command": "listAddToSelectionUp"
        },
        {
            "keys": ["shift+pagedown"],
            "command": "listAddPageToSelectionDown"
        },
        {
            "keys": ["shift+pageup"],
            "command": "listAddPageToSelectionUp"
        },
        {
            "keys": ["enter"],
            "command": "listSelectItem"
        },
        {
            "keys": ["delete"],
            "command": "listDeleteItem"
        },
        {
            "keys": ["ctrl+w", "x"],
            "command": "panes.closeView"
        },
        {
            "keys": ["ctrl+pageup"],
            "command": "panes.switchViewBy",
            "args": [-1]
        },
        {
            "keys": ["ctrl+pagedown"],
            "command": "panes.switchViewBy",
            "args": [1]
        },
        {
            "keys": ["ctrl+f", "/"],
            "command": "panes.searchContent"
        },
        {
            "keys": ["v"],
            "command": "visualization.toggle"
        },
        {
            "keys": ["ctrl+shift+v"],
            "command": "visualization.change"
        },
        {
            "keys": ["shift+?"],
            "command": "shortcuts.open"
        }
    ]
}
