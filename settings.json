{
    "theme": "blue",
    "logFile": "player.log",
    "logLevel": "DEBUG",
    "debug": true,
    "proxyServerPort": 5000,

    "keybindings": [
        {
            "keys": ["space"],
            "command": "togglePause"
        },
        {
            "keys": ["arrowleft"],
            "command": "seekBy",
            "args": [-20]
        },
        {
            "keys": ["arrowright"],
            "command": "seekBy",
            "args": [20]
        },
        {
            "keys": ["p"],
            "command": "skipTrackBy",
            "args": [-1]
        },
        {
            "keys": ["n"],
            "command": "skipTrackBy",
            "args": [1]
        },
        {
            "keys": ["r"],
            "command": "randomTrack"
        },
        {
            "keys": [";", "ctrl+shift+p"],
            "command": "openCommandsPalette"
        },
        {
            "keys": ["+"],
            "command": "volumeBy",
            "args": [0.05]
        },
        {
            "keys": ["-"],
            "command": "volumeBy",
            "args": [-0.05]
        },
        {
            "keys": ["ctrl+p"],
            "command": "loadPlaylist"
        },
        {
            "keys": ["ctrl+n"],
            "command": "newPlaylist"
        },
        {
            "keys": ["escape"],
            "command": "blur"
        },
        {
            "keys": ["arrowdown"],
            "command": "navigateListDown"
        },
        {
            "keys": ["arrowup"],
            "command": "navigateListUp"
        },
        {
            "keys": ["pagedown"],
            "command": "navigateListPageDown"
        },
        {
            "keys": ["pageup"],
            "command": "navigateListPageUp"
        },
        {
            "keys": ["enter"],
            "command": "listSelectItem"
        },
        {
            "keys": ["delete"],
            "command": "listDeleteItem"
        },
        {
            "keys": ["ctrl+w"],
            "command": "closePlaylist"
        },
        {
            "keys": ["ctrl+pageup"],
            "command": "skipPlaylist",
            "args": [-1]
        },
        {
            "keys": ["ctrl+pagedown"],
            "command": "skipPlaylist",
            "args": [1]
        },
        {
            "keys": ["ctrl+f", "/"],
            "command": "searchPlaylist"
        },
        {
            "keys": ["v"],
            "command": "toogleVisualization"
        }
    ]
}
