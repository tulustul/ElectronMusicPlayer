{
    "theme": "greeny",
    "logFile": "player.log",
    "logLevel": "DEBUG",
    "debug": true,
    "plugins_reload_debounce_time": 0.3,
    "plugins_paths": [
        "~/.config/player/"
    ],
    "default_context": "playlist",

    "plugins": [
        "test_plug",
        "bar",
        "library",
        "playlist",
        "errors_view",
        "commands_palette",
        "scan",
        "track_scheduler",
        "tray_menu"
    ],

    "layout": {
        "class": "Layout",
        "direction": "vertical",
        "components": [
            {
                "class": "Layout",
                "direction": "horizontal",
                "components": [
                    {
                        "class": "Layout",
                        "id": "mainview",
                        "color": "test2"
                    }
                ]
            },
            {
                "class": "Layout",
                "id": "bottomview",
                "desired_size": 5
            },
            {
                "class": "Bar",
                "id": "bar",
                "desired_size": 1,
                "color": "bar"
            }
        ]
    },

    "playlist": {
        "open_in": "mainview",
        "columns": [
            {
                "field": "track_number",
                "name": "NO",
                "priority": 1,
                "size": 3
            },
            {
                "field": "title",
                "name": "TITLE",
                "priority": 1
            },
            {
                "field": "album",
                "name": "ALBUM",
                "priority": 1
            },
            {
                "field": "artist",
                "name": "ARTIST",
                "priority": 1
            },
            {
                "field": "length",
                "name": "LENGTH",
                "priority": 1,
                "size": 6,
                "format": "time"
            }
        ]
    },

    "palette": {
        "open_in": "bottomview"
    },

    "errors": {
        "open_in": "bottomview"
    },

    "keybindings": [
        {
            "keys": ["ctrl+q"],
            "command": "quit"
        },
        {
            "keys": ["<home>"],
            "command": "navigate_list_top"
        },
        {
            "keys": ["<end>"],
            "command": "navigate_list_bottom"
        },
        {
            "keys": ["<pagedown>"],
            "command": "navigate_next_page"
        },
        {
            "keys": ["<pageup>"],
            "command": "navigate_previous_page"
        },
        {
            "keys": ["<arrowdown>"],
            "command": "navigate_list_by",
            "args": [1]
        },
        {
            "keys": ["<arrowup>"],
            "command": "navigate_list_by",
            "args": [-1]
        },
        {
            "keys": ["<arrowright>"],
            "command": "autocomplete_input"
        },
        {
            "keys": ["<enter>"],
            "command": "play_track",
            "context": "playlist"
        },
        {
            "keys": ["space"],
            "command": "togglePause"
        },
        {
            "keys": ["arrowleft"],
            "command": "seekBy",
            "args": [-20]
        },
        {
            "keys": ["arrowright"],
            "command": "seekBy",
            "args": [20]
        },
        {
            "keys": ["p"],
            "command": "skipTrackBy",
            "args": [-1]
        },
        {
            "keys": ["n"],
            "command": "skipTrackBy",
            "args": [1]
        },
        {
            "keys": ["r"],
            "command": "randomTrack"
        },
        {
            "keys": ["/"],
            "command": "search"
        },
        {
            "keys": ["<enter>"],
            "command": "commit_search",
            "context": "search"
        },
        {
            "keys": [":", "ctrl+shift+p"],
            "command": "openCommandsPalette"
        },
        {
            "keys": ["<enter>"],
            "command": "run_command",
            "context": "palette"
        },
        {
            "keys": ["<esc>", "<interrupt>"],
            "command": "pop_context"
        },
        {
            "keys": ["<resize>"],
            "command": "refresh"
        },
        {
            "keys": ["ctrl++"],
            "command": "volumeBy",
            "args": [0.05]
        },
        {
            "keys": ["ctrl+-"],
            "command": "volumeBy",
            "args": [-0.05]
        }
    ]
}
